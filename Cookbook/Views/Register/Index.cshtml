@using Cookbook.Resources.Register

@{
    ViewBag.Title = "Index";
}

<h2 class="page-header">@Index.PageHeader</h2>

<form action="/Register/CreateAccount" method="get">
    <div class="row form-group">
        <label for="email" class="control-label col-sm-2">@Index.EmailLabel</label>
        <input type="email" name="email" id="email" class="col-sm-10 form-control" />
    </div>
    <div class="row form-group">
        <label for="password" class="control-label col-sm-2">@Index.PasswordLabel</label>
        <input type="password" name="password" id="password" class="col-sm-10 form-control" />
    </div>
    <div class="row">
        <div class="col-sm-offset-2 col-sm-2">
            <input type="submit" class="center-block" value="@Index.SubmitButton" />
        </div>
    </div>
</form>
